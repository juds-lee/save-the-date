    // Linting and formatting configs for Nuxt 3
    "eslint.validate": [
        "javascript",
        "typescript",
        "html",
        "vue",
        "postcss"
    ],
    "editor.formatOnSave": true,
    "eslint.options": {
        "extensions": [
            ".html",
            ".js",
            ".vue",
            ".jsx"
        ]
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": "never",
        "source.fixAll.eslint": "explicit"
    },
    "liveServer.settings.port": 5501,
}